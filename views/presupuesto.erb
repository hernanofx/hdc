<title>Ejemplo</title>
<script language="javascript" type="text/javascript">
function sumar(){
    obj = document.presupuesto['form1'];
    totalChecks = obj.length;
    totalSumado = 0;
    for( i=0; i<totalChecks; i++){
        if( obj[i].checked == true ){
            valor = obj[i].value.split('-');
            totalSumado = totalSumado + parseInt(valor[0],10);
        }
    }
    document.getElementById('form1').innerHTML = 'estás sumando: '+ totalSumado;
}
</script>
</head>

<body>

<div id="form1">estás sumando: 0</div>

<form id="form1" action="/presupuestado" method="post">

