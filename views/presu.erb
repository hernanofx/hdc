<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Ejemplo</title>
<script language="javascript" type="text/javascript">
function sumar(){
    obj = document.miform['id'];
    totalChecks = obj.length;
    totalSumado = 0;
    for( i=0; i<totalChecks; i++){
        if( obj[i].checked == true ){
            valor = obj[i].value.split('-');
            totalSumado = totalSumado + parseInt(valor[0],10);
        }
    }
    document.getElementById('informacion').innerHTML = 'estás sumando: '+ totalSumado;
}
</script>
</head>

<body>
<div id="informacion">estás sumando: 0</div>
<form name="miform" id="miform">
    <input name="id" id="clt" type="checkbox" value="0" onclick="sumar()" /> Presupuesto</label><br>
    <input name="id" id="clt" type="checkbox" value="150" onclick="sumar()" /> Instalacion de programas</label><br>
    <input name="id" id="clt" type="checkbox" value="200" onclick="sumar()" /> Instalacion de Sistema Operativo</label><br>
    <input name="id" id="clt" type="checkbox" value="100" onclick="sumar()" /> Instalacion de memorias</label><br>
    <input name="id" id="clt" type="checkbox" value="150" onclick="sumar()" /> Instalacion de placas (sonido, imagen, etc..)</label><br>
    <input name="id" id="clt" type="checkbox" value="150" onclick="sumar()" /> Cambio de fuente</label><br>
    <input name="id" id="clt" type="checkbox" value="0" onclick="sumar()" /> Retiro de la pc de domicilio</label><br>
    <input name="id" id="clt" type="checkbox" value="100" onclick="sumar()" /> Entrega del equipo en su domicilio</label><br>
    <input name="id" id="clt" type="checkbox" value="80" onclick="sumar()" /> Copias de cd/dvds</label><br>


</form>
</body>
</html>
